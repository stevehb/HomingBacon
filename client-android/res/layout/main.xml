<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/radialbg"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/radialbg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0" >

            <CheckBox
                android:id="@+id/listen_checkbox"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/listen_checkbox_label" />

            <CheckBox
                android:id="@+id/transmit_checkbox"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/transmit_checkbox_label" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_choice"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/username_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.android.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:apiKey="053VFCiyb0FbC_HkkRv-CALVQQa-S13fIvBRFkw" >
    </com.google.android.maps.MapView>

</LinearLayout>